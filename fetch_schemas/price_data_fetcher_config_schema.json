{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "paths": {
      "type": "object",
      "properties": {
        "logs_from_general_config": {
          "type": "object",
          "properties": {
            "symbol_data": { "type": "string" },
            "price_data": { "type": "string" }
          },
          "required": ["symbol_data", "price_data"],
          "additionalProperties": false
        }
      },
      "required": ["logs_from_general_config"],
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "properties": {
        "symbol_to_use": { "type": "string" },
        "exchange_order": {
          "type": "array",
          "items": { "type": "string" }
        },
        "max_log_lines": { "type": "integer" }
      },
      "required": ["symbol_to_use", "exchange_order", "max_log_lines"],
      "additionalProperties": false
    },
    "okx": {
      "$ref": "#/definitions/exchangeConfig"
    },
    "kucoin": {
      "$ref": "#/definitions/exchangeConfig"
    },
    "binance": {
      "$ref": "#/definitions/exchangeConfig"
    },
    "bybit": {
      "$ref": "#/definitions/exchangeConfig"
    }
  },
  "required": ["paths", "settings", "okx", "kucoin", "binance", "bybit"],
  "additionalProperties": false,
  "definitions": {
    "exchangeConfig": {
      "type": "object",
      "properties": {
        "base_url": { "type": "string", "format": "uri" },
        "quote_assets": {
          "type": "array",
          "items": { "type": "string" }
        },
        "timeout": { "type": "integer" }
      },
      "required": ["base_url", "quote_assets", "timeout"],
      "additionalProperties": false
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "broad-sentiment": {
      "type": "object",
      "properties": {
        "state": { "type": "string" },
        "bias": { "type": "number" },
        "avg_score": { "type": "number" },
        "volume": { "type": "number" },
        "coins_counted": { "type": "integer" },
        "entries_counted": { "type": "integer" }
      },
      "required": ["state", "bias", "avg_score", "volume", "coins_counted", "entries_counted"]
    },
    "hour-sentiment": {
      "type": "object",
      "properties": {
        "state": { "type": "string" },
        "bias": { "type": "number" },
        "avg_score": { "type": "number" },
        "volume": { "type": "number" },
        "coins_counted": { "type": "integer" },
        "entries_counted": { "type": "integer" }
      },
      "required": ["state", "bias", "avg_score", "volume", "coins_counted", "entries_counted"]
    },
    "trend_shift": {
      "type": "object",
      "properties": {
        "direction": { "type": ["string", "null"] },
        "change": { "type": ["number", "null"] }
      },
      "required": ["direction", "change"]
    }
  },
  "required": ["timestamp", "broad-sentiment", "hour-sentiment", "trend_shift"]
}

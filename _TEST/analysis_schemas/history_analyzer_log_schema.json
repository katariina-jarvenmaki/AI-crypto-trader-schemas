{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CryptoIndicators",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "symbol": {
        "type": "string",
        "description": "Trading pair symbol, e.g. BTCUSDT"
      },
      "timestamp": {
        "type": "string",
        "format": "date-time",
        "description": "ISO 8601 timestamp"
      },
      "price": {
        "type": ["number", "string", "null"],
        "description": "Current price"
      },
      "price_change": {
        "type": ["number", "string", "null"],
        "description": "Absolute price change"
      },
      "price_change_percent": {
        "type": ["number", "string", "null"],
        "description": "Percentage price change"
      },
      "avg_rsi": {
        "type": ["number", "string", "null"],
        "description": "Average RSI value"
      },
      "rsi_change": {
        "type": ["number", "string", "null"],
        "description": "Absolute RSI change"
      },
      "rsi_change_percent": {
        "type": ["number", "string", "null"],
        "description": "Percentage RSI change"
      },
      "avg_ema": {
        "type": ["number", "string", "null"],
        "description": "Average EMA value"
      },
      "ema_change": {
        "type": ["number", "string", "null"],
        "description": "Absolute EMA change"
      },
      "ema_change_percent": {
        "type": ["number", "string", "null"],
        "description": "Percentage EMA change"
      },
      "avg_macd": {
        "type": ["number", "string", "null"],
        "description": "Average MACD value"
      },
      "macd_change": {
        "type": ["number", "string", "null"],
        "description": "Absolute MACD change"
      },
      "macd_change_percent": {
        "type": ["number", "string", "null"],
        "description": "Percentage MACD change"
      },
      "ema_trend": {
        "type": "string",
        "enum": ["strong_above", "strong_below", "neutral", "near_ema"],
        "description": "Trend direction based on EMA"
      },
      "macd_trend": {
        "type": "string",
        "enum": ["up", "down", "neutral"],
        "description": "Trend direction based on MACD"
      },
      "bollinger_status": {
        "type": "string",
        "enum": ["oversold", "overbought", "neutral"],
        "description": "Position relative to Bollinger Bands"
      },
      "signal_strength": {
        "type": ["string", "null"],
        "description": "Strength of trading signal"
      },
      "flag": {
        "type": ["string", "null"],
        "description": "Special market flag or alert"
      },
      "turnover_status": {
        "type": ["string", "null"],
        "description": "Market turnover status"
      },
      "rsi_divergence": {
        "type": ["string", "null"],
        "description": "RSI divergence signal"
      }
    },
    "required": ["symbol", "timestamp", "price", "avg_rsi", "avg_ema", "avg_macd", "ema_trend", "macd_trend", "bollinger_status"]
  }
}

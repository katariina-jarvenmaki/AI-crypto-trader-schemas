{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "History Data Collector Config",
  "type": "object",
  "properties": {
    "history_data_collector": {
      "type": "object",
      "properties": {
        "intervals_to_use": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["1m", "5m", "15m", "30m", "1h", "4h", "1d", "1w", "1M"]
          },
          "minItems": 1
        },
        "configs_and_logs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": { "type": "string" },
              "name": { "type": "string" },
              "mid_folder": { "type": "string" },
              "module_key": { "type": "string" },
              "extension": { "type": "string" },
              "return": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              },
              "max_age_minutes": { "type": "integer", "minimum": 0 }
            },
            "required": ["key", "name", "mid_folder", "module_key", "extension", "return", "max_age_minutes"],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": ["intervals_to_use", "configs_and_logs"],
      "additionalProperties": false
    }
  },
  "required": ["history_data_collector"],
  "additionalProperties": false
}

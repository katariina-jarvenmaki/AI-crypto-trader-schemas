{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "exchange_priority": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["okx", "kucoin", "binance", "bybit"]
      }
    },
    "intervals": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["1m", "3m", "5m", "15m", "30m", "1h", "2h", "4h", "1d", "1w"]
      }
    },
    "ohlcv_limit": {
      "type": "integer",
      "minimum": 1
    },
    "fetch_functions": {
      "type": "object",
      "properties": {
        "okx": { "type": "string" },
        "kucoin": { "type": "string" },
        "binance": { "type": "string" },
        "bybit": { "type": "string" }
      },
      "required": ["okx", "kucoin", "binance", "bybit"],
      "additionalProperties": false
    },
    "log_cleaner": {
      "type": "object",
      "properties": {
        "max_log_size_mb": {
          "type": "number",
          "minimum": 0
        },
        "entries_to_keep": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["max_log_size_mb", "entries_to_keep"],
      "additionalProperties": false
    }
  },
  "required": ["exchange_priority", "intervals", "ohlcv_limit", "fetch_functions", "log_cleaner"],
  "additionalProperties": false
}

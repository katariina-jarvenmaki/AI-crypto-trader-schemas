{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "exchange_priority",
    "fetch_functions",
    "fetch_retry",
    "log_cleaner",
    "intervals",
    "ohlcv_limit",
    "bybit_base_url",
    "kucoin_base_url",
    "okx_base_url",
    "interval_map_bybit",
    "interval_map_kucoin",
    "interval_map_okx"
  ],
  "properties": {
    "exchange_priority": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "fetch_functions": {
      "type": "object",
      "properties": {
        "okx": { "type": "string" },
        "kucoin": { "type": "string" },
        "binance": { "type": "string" },
        "bybit": { "type": "string" }
      },
      "required": ["okx", "kucoin", "binance", "bybit"],
      "additionalProperties": false
    },
    "fetch_retry": {
      "type": "object",
      "properties": {
        "max_retries": { "type": "integer", "minimum": 0 },
        "retry_delay": { "type": "number", "minimum": 0 }
      },
      "required": ["max_retries", "retry_delay"],
      "additionalProperties": false
    },
    "log_cleaner": {
      "type": "object",
      "properties": {
        "max_log_size_mb": { "type": "number", "minimum": 0 },
        "entries_to_keep": { "type": "integer", "minimum": 0 }
      },
      "required": ["max_log_size_mb", "entries_to_keep"],
      "additionalProperties": false
    },
    "intervals": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ohlcv_limit": {
      "type": "integer",
      "minimum": 1
    },
    "bybit_base_url": {
      "type": "string",
      "format": "uri"
    },
    "kucoin_base_url": {
      "type": "string",
      "format": "uri"
    },
    "okx_base_url": {
      "type": "string",
      "format": "uri"
    },
    "interval_map_bybit": {
      "type": "object",
      "patternProperties": {
        ".*": { "type": "string" }
      },
      "additionalProperties": false
    },
    "interval_map_kucoin": {
      "type": "object",
      "patternProperties": {
        ".*": { "type": "string" }
      },
      "additionalProperties": false
    },
    "interval_map_okx": {
      "type": "object",
      "patternProperties": {
        ".*": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

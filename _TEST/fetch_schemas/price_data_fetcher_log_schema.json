{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PriceDataLogEntry",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp in ISO 8601 format with timezone offset"
    },
    "source_exchange": {
      "type": "string",
      "description": "Name of the exchange the data was fetched from"
    },
    "symbol": {
      "type": "string",
      "description": "Trading pair symbol, e.g., BTCUSDT"
    },
    "data_preview": {
      "type": "object",
      "properties": {
        "last_price": { "type": "number" },
        "price_change_percent": { "type": "number" },
        "high_price": { "type": "number" },
        "low_price": { "type": "number" },
        "volume": { "type": "number" },
        "turnover": { "type": "number" }
      },
      "required": [
        "last_price",
        "price_change_percent",
        "high_price",
        "low_price",
        "volume",
        "turnover"
      ]
    }
  },
  "required": [
    "timestamp",
    "source_exchange",
    "symbol",
    "data_preview"
  ]
}
